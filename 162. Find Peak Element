class Solution {
    public int findPeakElement(int[] nums) {
        int n = nums.length;

        if(n == 1){return 0;}
        else if(nums[0]>nums[1]){return 0;}
        else if(nums[n-1]>nums[n-2]){return n-1;}

        int l=1,u=n-2,m;
        while(l<=u){
            m=(l+u)/2;
            if(nums[m] > nums[m-1] && nums[m] > nums[m+1]){
                return m;
            }
            else if(nums[m] > nums[m-1]){
                l=m+1;
            }
            else if(nums[m]>nums[m+1]){
                u=m-1;
            }
        }
        return -1;
    }
}
